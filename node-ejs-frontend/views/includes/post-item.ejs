<article class="post-item">
    <h2><%= post.title %></h2>
    <p class="post-item-author">By <%= post.staff_name %></p>
    <p><%= post.summary %></p>
    <div class="post-actions">
      <form action="/company/<%= post.idCompany %>/delete" method="POST">
        <button class="btn btn-alt">Delete Post</button>
      </form>
      <a href="/company/<%= post.idCompany %>/edit">Edit Company</a>
      <a class="btn" href="/company/<%= post.idCompany %>">View Company</a>
    </div>
  </article>